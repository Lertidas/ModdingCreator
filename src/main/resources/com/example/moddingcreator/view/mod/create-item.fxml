<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.moddingcreator.controllers.mod.CreateItemController"
            prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="itemNameLabel" layoutX="145" layoutY="30">Item Name</Label>
    <TextField fx:id="itemNameTextField" layoutX="100" layoutY="50"/>

    <Button fx:id="createButton" layoutX="300" layoutY="500" onAction="#onCreateClicked">Create</Button>

    <Button fx:id="backButton" layoutX="10" layoutY="570" onAction="#onBackClicked">Back</Button>
</AnchorPane>
